<h1>Add a new tea</h1>

<%= form_tag '/teas', class: "form-horizontal", method: :post do %>
<!-- 
This form tag is a method. it takes 2 arguments: a string - recipes url
and a hash {:method => :post} both key and value are symbols!
-->
  <div class="form-group">
  <%=label_tag :name, "Name", class: "col-sm-2 control-label" %>
  <%= text_field_tag :name, "", class: "col-sm-10" %>
  </div>
  <div class="form-group">
  <%=label_tag :price, "Price", class: "col-sm-2 control-label" %>
  <%= text_field_tag :price, "", class: "col-sm-10" %>
  </div>
  <div class="form-group">
  <%=label_tag :description, "Description", class: "col-sm-2 control-label" %>
  <%= text_field_tag :description, "", class: "col-sm-10" %>
  </div>
  <div class="form-group">
  <%=label_tag :image, "Image url", class: "col-sm-2 control-label" %>
  <%= text_field_tag :image, "", class: "col-sm-10" %>
  </div>
  <div class="form-group">
  <%=label_tag :stock, "In stock?", class: "col-sm-2 control-label" %>
  <%= text_field_tag :stock, "true or false", class: "col-sm-10" %>
  </div>
  <div class="form-group">
  <%=label_tag :supplier_id, "Supplier ID", class: "col-sm-2 control-label" %>
  <%= text_field_tag :supplier_id, "", class: "col-sm-10" %>
  </div>

    <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
  <%= submit_tag "Submit" %>
  </div>
  </div>
<% end %>