<h1>Your order</h1>
<p> <span class="intro">What you bought:</span>

<% @order.carted_teas.each do |carted_tea| %>
  <p><%= carted_tea.tea.name %> : $ <%= carted_tea.tea.price %> </p>
  <p><span class="intro">Quantity:</span> <%= carted_tea.quantity %></p>
<% end %>

<p> <span class="intro">Order ID:</span> <%= @order.id %></p>

<p><span class="intro">Subtotal: <%= @order.subtotal %></span></p>
<p><span class="intro">Tax: <%= @order.tax %></span></p>
<p><span class="intro">Total: <%= @order.total %></span></p>